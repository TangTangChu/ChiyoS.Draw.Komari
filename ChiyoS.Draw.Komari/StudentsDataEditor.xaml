<hc:Window x:Class="ChiyoS.Draw.Komari.StudentsDataEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:assembly="clr-namespace:System;assembly=mscorlib"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiyoS.Draw.Komari"
        mc:Ignorable="d" Width="340" Height="590"
           Title="StudentDataEditor" ResizeMode="CanMinimize" FontFamily="/ChiyoS.Draw.Komari;component/#GEETYPE-WaonProGB-Flash DB">
    <hc:Window.Resources>
        <ObjectDataProvider x:Key="sexEnum" MethodName="GetValues" 
                            ObjectType="{x:Type assembly:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:SexOpt"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </hc:Window.Resources>
    <Grid>
        <Image Stretch="UniformToFill" Source="/白聖女_82645332.png" RenderOptions.BitmapScalingMode="HighQuality"/>
        <StackPanel >
            <Menu Height="30" Background="{x:Null}">
                <MenuItem x:Name="Mit_open" Click="Mit_open_Click" Header="打开" />
                <MenuItem x:Name="Mit_save" Click="Mit_save_Click" Header="保存" IsEnabled="False"/>
                <MenuItem x:Name="Mit_saveas" Click="Mit_saveas_Click" Header="另存为" IsEnabled="False"/>
                <TextBlock x:Name="Mit_tbk_1" Text="初次使用请点击下方的加载按钮" FontSize="11" FontWeight="Black" Foreground="Red"/>
            </Menu>
            <StackPanel x:Name="Stp_btg" IsEnabled="False" Orientation="Horizontal" HorizontalAlignment="Center" Height="44">
                <Button x:Name="Btn_AddST" Content="添加" Background="#FF4BF48F" Click="Btn_AddST_Click"/>
                <Button x:Name="Btn_DelST" Content="删除" Background="#FFFD5A5A" Click="Btn_DelST_Click"/>
                <Button x:Name="Btn_UppenST" Content="上移" Background="#FFFF349A" Click="Btn_UppenST_Click" />
                <Button x:Name="Btn_DnST" Content="下移" Background="#FFF3F442" Click="Btn_DnST_Click"/>
                <Button x:Name="Btn_CLEAR" Content="清空" Background="#FF42A7F4" Click="Btn_CLEAR_Click"/>
            </StackPanel>
            <hc:TextBox x:Name="Tbx_title" Height="20" hc:TitleElement.Title="标题:" hc:TitleElement.TitlePlacement="Left" Text="" Background="{x:Null}"/>
            <Grid>
                <Button x:Name="Btn_LoadNow" Click="Btn_LoadNow_Click" Content="&#xe8c6;" FontSize="48" Height="80" Width="80"  Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" FontWeight="Bold" Foreground="#FFFF7E24" />
                <DataGrid Visibility="Hidden" x:Name="Dtg_1" Height="420" ScrollViewer.VerticalScrollBarVisibility="Visible" IsHitTestVisible="True" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="{x:Null}" BorderBrush="{x:Null}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="学号" Width="100" FontSize="14" IsReadOnly="True"  Binding="{Binding SIndex,Mode=TwoWay}" CanUserSort="False"/>
                        <DataGridTextColumn Header="姓名" Width="150" FontSize="14" Binding="{Binding Name,Mode=TwoWay}" CanUserSort="False"/>
                        <DataGridComboBoxColumn Header="性别" Width="76" SelectedItemBinding="{Binding Gender,Mode=TwoWay}" ItemsSource="{Binding Source={StaticResource sexEnum}}" CanUserSort="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <StatusBar Background="{x:Null}" BorderBrush="{x:Null}" DockPanel.Dock="Bottom">
                <Grid>
                    <TextBox x:Name="Tbk_filepath" IsReadOnly="True" Text="Json文件路径:" hc:TextBlockAttach.AutoTooltip="True" FontWeight="Bold" Foreground="#FFFF8000" Background="{x:Null}" BorderBrush="{x:Null}"/>
                </Grid>
            </StatusBar>
        </StackPanel>


    </Grid>
</hc:Window>
