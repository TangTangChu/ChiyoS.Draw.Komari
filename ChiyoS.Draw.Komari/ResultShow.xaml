<Window x:Class="ChiyoS.Draw.Komari.ResultShow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiyoS.Draw.Komari"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d" WindowStyle="None"
        Title="ResultShow" Height="225" Width="600">
    <Grid>

        <TextBlock x:Name="Tbk_Title" Margin="0,0,0,172" TextWrapping="Wrap" FontSize="38" FontWeight="Bold" TextAlignment="Center" Text="结果"/>
        <TextBlock  Margin="0,45,0,145" TextWrapping="Wrap" FontSize="20" FontWeight="Bold" TextAlignment="Center" Text="（头像自动分配）"/>
        <Button x:Name="Btn_Scvleft" Content="‹" Click="Btn_Scvleft_Click" FontSize="20" FontWeight="ExtraBold" Margin="2,72,562,3" Height="142" Width="28"   ></Button>
        <Button x:Name="Btn_Scvright" Content="›" Click="Btn_Scvright_Click" FontSize="20" FontWeight="ExtraBold" Margin="562,72,2,3" Height="142" Width="28"   ></Button>
        <hc:ScrollViewer x:Name="Scv_1" Orientation="Horizontal" HorizontalScrollBarVisibility="Auto" PanningMode="Both" Margin="30,72,30,0">
            <StackPanel x:Name="Stp_s1" Orientation="Horizontal">

            </StackPanel>
        </hc:ScrollViewer>
        <Button x:Name="Btn_Close" Content="&#xe62e;" FontSize="18" Click="Btn_Close_Click" Margin="550,0,0,187" BorderBrush="{x:Null}" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" Width="42" Foreground="#FFFF4B54"/>
    </Grid>
</Window>
