<hc:Window x:Class="ChiyoS.Draw.Komari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:ChiyoS.Draw.Komari"
        mc:Ignorable="d"
           
           x:Name="MWindow"
        Title="ChiyoS.Draw.Komari" Height="640" Width="1126.5" Loaded="MWindow_Loaded" ResizeMode="CanMinimize" Closing="MWindow_Closing" FontFamily="/ChiyoS.Draw.Komari;component/#GEETYPE-WaonProGB-Flash DB" Icon="/65750322_p0_ふうこ.png" Background="{x:Null}">
    <hc:Window.NonClientAreaContent>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="Btn_SDE" Content="编辑学号表" Click="Btn_SDE_Click" BorderBrush="{x:Null}" Foreground="#FFE50FB8"/>
        </StackPanel>
    </hc:Window.NonClientAreaContent>
        <Grid>

        <Image x:Name="Img_bg1" Source="115826130_p1_星萤.jpg" Stretch="UniformToFill"/>
        <Image x:Name="Img_bg2" Stretch="UniformToFill" Opacity="0"/>

        <TabControl x:Name="Tbcl" Background="{x:Null}">
            <TabItem Visibility="Collapsed">
            </TabItem>
            <TabItem Visibility="Collapsed" IsSelected="True">
                <Grid >
                    <TextBlock x:Name="Tbk_wel" Text="少女祈祷中..." TextAlignment="Center" FontWeight="Bold" FontSize="100" Margin="0,270,0,220.2" Foreground="White" Opacity="0.75"/>
                    <Button x:Name="Btn_Enter" Click="Btn_Enter_Click" Content="进入"  Margin="491,353,479,100" Height="70" Visibility="Hidden" Width="240" Style="{StaticResource ButtonSuccess}" FontSize="30">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF2DB84D"/>
                                <GradientStop Color="#FF52E4F7" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <ProgressBar x:Name="Pgb_wel" Style="{DynamicResource ProgressBarFlat}" Width="750" IsIndeterminate="True" Margin="200,372,170,203.2" Foreground="#FFFD3792"/>
                    <TextBlock x:Name="Tbk_wel2" Height="35" Text="正在做一些必要的准备，请稍后" FontWeight="Medium" FontSize="24" TextAlignment="Center" Foreground="White" Margin="0,381,0,163.2" Opacity="0.74"/>
                    <TextBlock x:Name="Tbk_wel_bgif"  Margin="720,547,0,-0.8" TextAlignment="Right" Text="夜色名为温柔" VerticalAlignment="Top" Height="33" Width="400" FontSize="26" Foreground="White"/>
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Grid x:Name="Gd_PZ" Height="612">
                    <TextBlock Text="配置" FontWeight="Bold" Height="80" Width="300" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="64" Foreground="White"/>
                    <hc:ButtonGroup x:Name="BtnG" Height="36" Margin="388,247,382,0">
                        <RadioButton x:Name="Rbtn_RManual" Content="&#xEB32; 手动抽取" IsChecked="True" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" Height="36" FontSize="20"/>
                        <RadioButton x:Name="Rbtn_RAuto" Content="&#xE634; 自动抽取" Click="Rbtn_RAuto_Click_1"  FontFamily="/ChiyoS.Draw.Komari;component/#iconfont"  FontSize="20" Height="36"/>
                    </hc:ButtonGroup>
                    <hc:NumericUpDown x:Name="Nud_cqrs" Value="1" Height="35" Width="150" Maximum="55" Minimum="1" Margin="386,288,584,284" hc:TitleElement.Title="抽取人数" hc:TitleElement.Foreground="White" hc:TitleElement.TitlePlacement="Left"  Style="{StaticResource NumericUpDownExtend}" FontSize="14" Foreground="Black"/>
                    <hc:NumericUpDown x:Name="Nud_interval" Value="24" Height="35" Width="150" Minimum="1" hc:TitleElement.Title="Interval" hc:TitleElement.TitlePlacement="Left" hc:TitleElement.Foreground="White" Style="{StaticResource NumericUpDownExtend}" Margin="590,290,386,286" IsEnabled="{Binding ElementName=Rbtn_RAuto,Path=IsChecked,Mode=OneWay}" FontSize="14"/>

                    <hc:NumericUpDown x:Name="Nud_stid" Value="1" Height="35" Width="150" Maximum="55" Minimum="1" IsEnabled="{Binding ElementName=Cbx_cqgt_all,Path=IsSelected,Mode=OneWay}" Margin="386,364,584,208" hc:TitleElement.Title="起始学号" hc:TitleElement.TitlePlacement="Left" hc:TitleElement.Foreground="White" Style="{StaticResource NumericUpDownExtend}"   FontSize="14" Background="White"/>
                    <hc:NumericUpDown x:Name="Nud_endid" Value="55" Height="35" Maximum="55" Minimum="1" IsEnabled="{Binding ElementName=Cbx_cqgt_all,Path=IsSelected,Mode=OneWay}" Margin="586,364,388,213" hc:TitleElement.Title="终止学号" hc:TitleElement.TitlePlacement="Left" hc:TitleElement.Foreground="White" Style="{StaticResource NumericUpDownExtend}"   FontSize="14"/>
                    <hc:ButtonGroup x:Name="BtnG_2" Height="34" Width="250" IsEnabled="{Binding ElementName=Rbtn_RManual,Path=IsChecked,Mode=OneWay}" Margin="389,330,488,0" Style="{StaticResource ButtonGroupSolid}">
                        <RadioButton x:Name="Rbtn_GDMZ" Content="以名字方式滚动" IsChecked="True"/>
                        <RadioButton x:Name="Rbtn_GDXH" Content="以学号方式滚动" />
                    </hc:ButtonGroup>
                    <ComboBox x:Name="Cbx_cqgt" SelectedIndex="0" Margin="389,406,528,0" VerticalAlignment="Top" Height="36" Style="{StaticResource ComboBoxExtend}" hc:TitleElement.Title="抽取个体" hc:TitleElement.TitlePlacement="Left">
                        <ComboBoxItem x:Name="Cbx_cqgt_all" Content="全体学生" />
                        <ComboBoxItem Content="男孩子"/>
                        <ComboBoxItem Content="女孩子"/>
                    </ComboBox>
                    <ComboBox x:Name="Cbx_sf" SelectedIndex="0" IsEnabled="{Binding ElementName=Rbtn_RAuto,Path=IsChecked,Mode=OneWay}" Margin="388,447,530,0" VerticalAlignment="Top" Height="36" Style="{StaticResource ComboBoxExtend}" hc:TitleElement.Title="抽取算法" hc:TitleElement.TitlePlacement="Left">
                        <ComboBoxItem Content="算法1" />
                        <ComboBoxItem Content="算法2" />
                    </ComboBox>
                    <TextBlock x:Name="Tbk_PZ_Info" Height="40" Text="学号表未加载成功哦" FontSize="33" Visibility="Hidden" TextAlignment="Center"  Margin="386,202,386,370" Foreground="#FFFB4587"/>
                    <Button x:Name="Btn_PZ_DrawS" Content="&#xE62F; 开始" Click="Btn_PZ_DrawS_Click"  Margin="386,488,584,74" Height="50" Width="150" Style="{StaticResource ButtonSuccess}" IsEnabled="True" FontSize="22" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" >
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF3AEA62"/>
                                <GradientStop Color="#FF1B9CEF" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>

                    </Button>
                    <CheckBox x:Name="Cbx_DynamicFrequency" Content="启用动态频率" IsChecked="False" IsEnabled="{Binding ElementName=Rbtn_RManual,Path=IsChecked,Mode=OneWay}" HorizontalAlignment="Left" Margin="604,429,0,0" VerticalAlignment="Top" Foreground="Black" RenderTransformOrigin="0.505,0.528"/>
                    <Button x:Name="Btn_PZ_ToRST" Content="&#xe612; 结果页" Click="Btn_PZ_ToRST_Click"  Margin="584,488,386,74" Height="50" Width="150" Style="{StaticResource ButtonPrimary}" IsEnabled="True" FontSize="22" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" >
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF326CF3"/>
                                <GradientStop Color="#FF32E6F3" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <TextBlock x:Name="Tbk_PZ_bgif" Margin="720,547,0,-0.8"  Text="夜色名为温柔"  TextAlignment="Right" Height="33" Width="400" FontSize="26" Foreground="White"/>
                    <CheckBox x:Name="Cbx_isNosquence" Content="启用乱序滚动列" IsChecked="True" IsEnabled="{Binding ElementName=Rbtn_RManual,Path=IsChecked,Mode=OneWay}" HorizontalAlignment="Left" Margin="604,406,0,0" VerticalAlignment="Top" Foreground="Black"/>
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Grid >
                    <Button x:Name="Btn_RST_cq" Content="&#xe650; 抽取" Click="Btn_RST_cq_Click" Visibility="Hidden"  Margin="473,353,497,209" Height="50" Width="150" Style="{StaticResource ButtonInfo}" IsEnabled="True" FontSize="22" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" >
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF00BCD4"/>
                                <GradientStop Color="#FF68F39D" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <TextBlock x:Name="Tbk_RST_Text" Text="これはテキストです " FontWeight="ExtraBold" FontSize="100" Height="110" TextAlignment="Center" Margin="0,119,0,365" Foreground="White" Opacity="0.6"/>
                    <TextBlock x:Name="Tbk_RST_Info" Margin="0,244,0,308" Height="42"  Text="这是信息" FontWeight="Medium" TextAlignment="Center" FontSize="30" Foreground="White" Opacity="0.7"/>
                    <TextBlock x:Name="Tbk_RST_Count" Text="计数器" Height="30" FontStyle="Italic" Margin="966,370,41,207.4" TextAlignment="Center" FontSize="24" Foreground="White" Opacity="0.7" />
                    <Button x:Name="Btn_RST_Cancle" Content="&#xe653; 取消" Click="Btn_RST_Cancle_Click" Style="{DynamicResource ButtonDanger}" IsEnabled="False" Width="100" Height="30" Margin="986,291,0,0" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FFDB3340"/>
                                <GradientStop Color="#FFDB3369" Offset="1"/>
                                <GradientStop Color="#FFF91B47" Offset="0.393"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Btn_RST_BacktoPZ" Content="&#xe6ff; 返回" Click="Btn_RST_BacktoPZ_Click" Style="{DynamicResource ButtonPrimary}" IsEnabled="False" Width="100" Height="30" Margin="986,326,0,0" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF326CF3"/>
                                <GradientStop Color="#FFBCAAFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Btn_RST_Restart" Content="&#xe65b;  重新开始" Click="Btn_RST_Restart_Click"  Style="{StaticResource ButtonInfo}" IsEnabled="False" Width="100" Height="30" Margin="877,326,0,0" FontFamily="/ChiyoS.Draw.Komari;component/#iconfont" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Color="#FF00BCD4"/>
                                <GradientStop Color="#FFBF00D4" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Btn_RST_ScvLeft" Content="‹" Height="127" Width="40"  Click="Btn_RST_ScvLeft_Click"  Background="{x:Null}" FontSize="60" Foreground="White" BorderBrush="White" HorizontalAlignment="Left" Margin="10,457,0,0" VerticalAlignment="Top" />
                    <Button x:Name="Btn_RST_ScvRight" Content="›" Height="127" Width="40" Click="Btn_RST_ScvRight_Click"  Background="{x:Null}" FontSize="60" Foreground="White" BorderBrush="White" HorizontalAlignment="Left" Margin="1076,457,0,0" VerticalAlignment="Top" />
                    <hc:ScrollViewer x:Name="Scve_RST_s1" Height="202" Margin="66,408,66,2" Orientation="Horizontal" HorizontalScrollBarVisibility="Auto" PanningMode="Both">
                        <StackPanel x:Name="Stp_RST_s1" Orientation="Horizontal">

                        </StackPanel>
                    </hc:ScrollViewer>
                    
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Grid>
                    <hc:OutlineText x:Name="Otxt_Warn_wt" FontWeight="Bold" Text="警告：请勿间隔相同或相近时间点击抽取，否则抽中个体会被人为因素的限定在某一范围(注意，本警告页仅在动态频率与随机顺序皆未开启时显示)" TextWrapping="WrapWithOverflow" Stroke="White" Fill="Black" StrokeThickness="1.8" FontSize="68" Margin="0,82,0,174"/>
                    <hc:OutlineText x:Name="Otxt_Warn_down" FontWeight="Bold" Text="倒计时" Stroke="White" Fill="#FFFF9C49" StrokeThickness="2.5" FontSize="68" TextAlignment="Center" Margin="0,425,0,38" />
                </Grid>
            </TabItem>

        </TabControl>
        <TextBlock x:Name="Tbk_flowtext" Text="Text" Height="80" TextAlignment="Center" FontSize="54" Margin="0,0,0,530.4" Foreground="White" Opacity="0" Background="#FFEA2653"/>
    </Grid>
    <hc:Window.Resources>
        <Storyboard x:Key="Entermp">
            <DoubleAnimation Storyboard.TargetName="Tbk_wel" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="Tbk_wel2" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="Btn_Enter" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="Tbk_wel_bgif" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Entermp2">
            <DoubleAnimation From="0" To="1" Storyboard.TargetProperty="Opacity" Duration="0:0:0.7"/>
        </Storyboard>
        <Storyboard x:Key="Opacity1">
            <DoubleAnimation From="0" To="1" Storyboard.TargetProperty="Opacity" Duration="0:0:2"/>
        </Storyboard>
        <Storyboard x:Key="Opacity2">
            <DoubleAnimation From="1" To="0" Storyboard.TargetProperty="Opacity" Duration="0:0:2"/>
        </Storyboard>
        <Storyboard x:Key="Opacity3">
            <DoubleAnimation From="0" To="1" Storyboard.TargetProperty="Opacity" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="Opacity4">
            <DoubleAnimation From="1" To="0" Storyboard.TargetProperty="Opacity" Duration="0:0:1"/>
        </Storyboard>
    </hc:Window.Resources>
</hc:Window>
